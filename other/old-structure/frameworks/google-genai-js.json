{
  "$schema": "../schema/framework-schema.json",
  "name": "Google Generative AI JS",
  "languages": [
    "javascript",
    "typescript"
  ],
  "detection": {
    "dependencies": {
      "package.json": [
        {
          "pattern": "\"@google/generative-ai\"",
          "library": "Google Generative AI"
        }
      ]
    }
  },
  "architecture": {
    "integration": {
      "ai_services": [
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "GoogleGenerativeAI.getGenerativeModel"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "GenerativeModel.generateContent"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "GenerativeModel.startChat"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "ChatSession.sendMessage"
        }
      ]
    }
  }
}