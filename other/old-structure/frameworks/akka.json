{
  "$schema": "../schema/framework-schema.json",
  "name": "Akka",
  "languages": [
    "java"
  ],
  "extends": "java",
  "detection": {
    "files": {
      "target": "filename",
      "pattern": [
        "application.conf"
      ]
    },
    "dependencies": {
      "pom.xml": [
        {
          "artifact": "akka-actor",
          "library": "Akka"
        }
      ],
      "build.gradle": [
        {
          "pattern": "com.typesafe.akka",
          "library": "Akka"
        }
      ]
    },
    "imports": {
      "search_type": "import",
      "target": "joern",
      "pattern": [
        "akka.http.scaladsl.model.*",
        "akka.http.scaladsl.model.headers.*"
      ]
    }
  },
  "architecture": {
    "database": {
      "repository_pattern": [
        {
          "target": "joern",
          "search_type": "class_name_regex",
          "pattern": ".*Repository.*|.*DAO.*"
        }
      ],
      "operation_methods": [
        {
          "target": "joern",
          "search_type": "method_name_regex",
          "pattern": "save|persist|find.*|delete.*"
        }
      ]
    },
    "data_flow": {
      "input_sources": [
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "akka.http.scaladsl.model.headers.HttpCookiePair.value()"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "akka.http.scaladsl.model.Uri$Query$Cons.value()"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "akka.http.scaladsl.model.HttpMessage.entity()"
        }
      ]
    }
  }
}
