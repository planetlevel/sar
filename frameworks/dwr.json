{
  "$schema": "../schema/framework-schema.json",
  "name": "Dwr",
  "languages": [
    "java"
  ],
  "extends": "java",
  "detection": {
    "dependencies": {},
    "imports": {
      "type": "joern",
      "search_type": "import",
      "patterns": [
        "org.directwebremoting.util.*"
      ]
    }
  },
  "architecture": {
    "database": {
      "repository_pattern": {
        "type": "joern",
        "search_type": "class_name_regex",
        "pattern": ".*Repository.*|.*DAO.*"
      },
      "operation_methods": {
        "type": "joern",
        "search_type": "method_name_regex",
        "pattern": "save|persist|find.*|delete.*"
      }
    },
    "security": {
      "sanitization": {
        "type": "joern",
        "search_type": "method_signature",
        "pattern": "org.directwebremoting.util.LocalUtil.isLetterOrDigitOrUnderline(java.lang.String)"
      }
    }
  }
}
