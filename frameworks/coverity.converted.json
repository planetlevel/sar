{
  "$schema": "../schema/framework-schema.json",
  "name": "Coverity",
  "languages": [
    "java"
  ],
  "extends": "java",
  "detection": {
    "dependencies": {},
    "imports": {
      "type": "joern",
      "search_type": "import",
      "patterns": [
        "com.coverity.security.*"
      ]
    }
  },
  "architecture": {
    "database": {
      "repository_pattern": [
        {
          "target": "joern",
          "search_type": "class_name_regex",
          "pattern": ".*Repository.*|.*DAO.*"
        }
      ],
      "operation_methods": [
        {
          "target": "joern",
          "search_type": "method_name_regex",
          "pattern": "save|persist|find.*|delete.*"
        }
      ]
    },
    "security": {
      "sanitization": [
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "com.coverity.security.Escape.cssString(java.lang.String)"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "com.coverity.security.Escape.html(java.lang.String)"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "com.coverity.security.Escape.htmlText(java.lang.String)"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "com.coverity.security.Escape.jsString(java.lang.String)"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "com.coverity.security.Escape.uri(java.lang.String)"
        },
        {
          "target": "joern",
          "search_type": "method_signature",
          "signature": "com.coverity.security.Escape.uriParam(java.lang.String)"
        }
      ]
    }
  }
}