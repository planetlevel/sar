{
  "$schema": "../schema/framework-schema.json",
  "name": "Jsoup",
  "languages": [
    "java"
  ],
  "extends": "java",
  "detection": {
    "dependencies": {
      "pom.xml": [
        {
          "artifact": "jsoup",
          "library": "Jsoup HTML Parser"
        }
      ],
      "build.gradle": [
        {
          "pattern": "org.jsoup:jsoup",
          "library": "Jsoup HTML Parser"
        }
      ]
    },
    "imports": {
      "type": "joern",
      "search_type": "import",
      "patterns": [
        "org.jsoup.*",
        "org.jsoup.safety.*"
      ]
    }
  },
  "architecture": {
    "security": {
      "sanitization": {
        "type": "joern",
        "search_type": "method_signature",
        "signatures": [
          "org.jsoup.Jsoup.clean:java.lang.String(java.lang.String,org.jsoup.safety.Safelist)",
          "org.jsoup.Jsoup.clean:java.lang.String(java.lang.String,java.lang.String,org.jsoup.safety.Safelist)",
          "org.jsoup.Jsoup.clean:java.lang.String(java.lang.String,java.lang.String,org.jsoup.safety.Safelist,org.jsoup.nodes.Document$OutputSettings)",
          "org.jsoup.safety.Cleaner.clean:org.jsoup.nodes.Document(org.jsoup.nodes.Document)",
          "org.jsoup.safety.Cleaner.isValid:boolean(org.jsoup.nodes.Document)"
        ]
      }
    }
  }
}
