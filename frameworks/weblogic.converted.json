{
  "$schema": "../schema/framework-schema.json",
  "name": "Weblogic",
  "languages": [
    "java"
  ],
  "extends": "java",
  "detection": {
    "binaries": {
      "type": "filename",
      "patterns": [
        "weblogic.jar"
      ]
    },
    "files": {
      "type": "filename",
      "patterns": [
        "weblogic.xml",
        "weblogic-application.xml"
      ]
    },
    "dependencies": {},
    "imports": {
      "type": "joern",
      "search_type": "import",
      "patterns": [
        "weblogic.servlet.security.*"
      ]
    }
  },
  "architecture": {
    "database": {
      "repository_pattern": [
        {
          "target": "joern",
          "search_type": "class_name_regex",
          "pattern": ".*Repository.*|.*DAO.*"
        }
      ],
      "operation_methods": [
        {
          "target": "joern",
          "search_type": "method_name_regex",
          "pattern": "save|persist|find.*|delete.*"
        }
      ]
    },
    "security": {
      "sanitization": [
        {
          "target": "joern",
          "search_type": "method_signature",
          "pattern": "weblogic.servlet.security.Utils.encodeXSS(java.lang.String)"
        }
      ]
    }
  }
}