{
  "$schema": "../schema/framework-schema.json",
  "name": "Akka",
  "languages": [
    "java"
  ],
  "extends": "java",
  "detection": {
    "files": {
      "type": "filename",
      "patterns": [
        "application.conf"
      ]
    },
    "dependencies": {
      "pom.xml": [
        {
          "artifact": "akka-actor",
          "library": "Akka"
        }
      ],
      "build.gradle": [
        {
          "pattern": "com.typesafe.akka",
          "library": "Akka"
        }
      ]
    },
    "imports": {
      "type": "joern",
      "search_type": "import",
      "patterns": [
        "akka.http.scaladsl.model.*",
        "akka.http.scaladsl.model.headers.*"
      ]
    }
  },
  "architecture": {
    "database": {
      "repository_pattern": {
        "type": "joern",
        "search_type": "class_name_regex",
        "pattern": ".*Repository.*|.*DAO.*"
      },
      "operation_methods": {
        "type": "joern",
        "search_type": "method_name_regex",
        "pattern": "save|persist|find.*|delete.*"
      }
    },
    "data_flow": {
      "input_sources": {
        "type": "joern",
        "search_type": "method_signature",
        "signatures": [
          "akka.http.scaladsl.model.headers.HttpCookiePair.value()",
          "akka.http.scaladsl.model.Uri$Query$Cons.value()",
          "akka.http.scaladsl.model.HttpMessage.entity()"
        ]
      }
    }
  }
}